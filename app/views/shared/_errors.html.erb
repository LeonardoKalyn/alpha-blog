<% if obj.errors.any? %>
  <div class='col-12'>
    <div class='row'>
      <div class= 'col-sm-8 offset-sm-2'>
        <div class='card text-white bg-danger mb-3 mt-3'>
          <div class='card-header'>
            <h4 class='card-title'>
              <%= pluralize(obj.errors.count, 'error') %>
              prohibidted this article from beeing saved:
            </h4>
          </div>
          <div class='card-body'>
            <ul>
              <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %> 
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>