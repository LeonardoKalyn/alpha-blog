<h1 align='center'>Log in</h1>

<%= form_for(:session, :html => {class: 'row'}, url: login_path) do |f| %>
  <div class='col-12'>
    <div class='form-group row'>
      <div class='col-sm-2 col-form-label'>
        <%= f.label :email %>
      </div>
      <div class='col-sm-8'>
        <%= f.text_field :email, class: 'form-control', placeholder: 'Enter email', autofocus: true %>
      </div>
    </div>
    
    <div class='form-group row'>
      <div class='col-sm-2 col-form-label'>
        <%= f.label :password %><br/>
    </div>
      <div class='col-sm-8'>
        <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
      </div>
    </div>
    
    <div class='form-group row'>
      <div class='offset-sm-2 col-sm-2'>
        <%= link_to 'Cancel', articles_path, class:'btn btn-danger btn-lg' %>
      </div>
      <div class='col-sm-4'>
        <%= f.submit 'Log in', class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  </div>
<% end %>