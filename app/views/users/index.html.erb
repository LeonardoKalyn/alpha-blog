<h1 align='center'>All Alpha-Bloggers</h1>
<div align='center'>
  <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
  <% @users.each do |user| %>
    <ul class='listing'>
      <div class='row'>
        <div class='well col-md-4 offset-md-4'>
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class='article-title'>
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, 'artile') if user.articles %></small></li>
          <% if logged_in? && current_user.admin? %>
            <li>
              <%= link_to "Delete User", user_path(user), method: :delete,
                data: {confirm: "Are you sure you want to delete this user and all his articles?"},
                class: 'btn btn-sm btn-danger'
              %>
            </li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>