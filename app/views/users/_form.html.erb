<%= render 'shared/errors', obj: @user %>

<%= form_for(@user, :html => {class: 'row'}) do |f| %>
  <div class='col-12'>
    <div class='form-group row'>
      <div class='col-sm-2 col-form-label'>
        <%= f.label :username %>
      </div>
      <div class='col-sm-8'>
        <%= f.text_field :username, class: 'form-control', placeholder: 'Enter Username', autofocus: true %>
      </div>
    </div>
    
    <div class='form-group row'>
      <div class='col-sm-2 col-form-label'>
        <%= f.label :email %><br/>
      </div>
      <div class='col-sm-8'>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
      </div>
    </div>
    
    <div class='form-group row'>
      <div class='col-sm-2 col-form-label'>
        <%= f.label :password %><br/>
    </div>
      <div class='col-sm-8'>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
      </div>
    </div>
    
    <div class='form-group row'>
      <div class='offset-sm-2 col-sm-2'>
        <%= link_to 'Cancel', articles_path, class:'btn btn-danger btn-lg' %>
      </div>
      <div class='col-sm-4'>
        <%= f.submit( @user.new_record? ? 'Signup' : 'Update account', class: 'btn btn-primary btn-lg') %>
      </div>
    </div>
  </div>
<% end %>